.body {
    height: 100%;
    box-sizing: border-box;
    padding: 90rpx 0 0;
    background: #f7f7f7;
}

.bottomBlank2 {
    display: none;
}

.navBlock {
    width: 100%;
    position: fixed;
    left: 0;
    top: 0;
    box-shadow: 0 1rpx 3rpx #999;
    z-index: 50;
    white-space: nowrap;
}

.navBlock .navBox {
    display: inline-block;
    height: 90rpx;
    line-height: 90rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid transparent;
    font-size: 30rpx;
    text-align: center;
    margin: 0 20rpx;
}

.navBlock .navBox.curr {
    border-color: #77D4C0;
    color: #77D4C0;
}

.menu {
    position: fixed;
    width: 350rpx;
    height: 400rpx;
    left: 200rpx;
    top: 300rpx;
    z-index: 2000;
}

.menu .menu_back {
    width: 100%;
    height: 100%;
}

.menu .menux {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 94rpx;
}

.menu .menux .title {
    height: 94rpx;
    border-bottom: #ddd 2rpx dashed;
    text-align: center;
}

.menu .menux .quanma {
    width: 300rpx;
    height: 300rpx;
    display: block;
    margin: 0 auto;
}

.canshow {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #000;
    opacity: 0.5;
    z-index: 1200;
}

.body .orderCont image {
    width: 100%;
    height: 100%;
}

.customer_service {
    display: none;
}

.menu2 {
    position: fixed;
    top: 20vw;
    width: 90vw;
    left: 5vw;
    z-index: 9999;
    background: #fff;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 40rpx;
}

.menu2 .menu_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.menu2 .menu_item {
    padding: 20rpx 0;
}

.menu2 .menu_item textarea {
    border: #ddd 2rpx solid;
    margin-top: 20rpx;
    height: 200rpx;
}

.menu2 .menu_btn {
    color: #fff;
    height: 80rpx;
    font-size: 4.5vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

.footer_block {
    background: #fff;
}