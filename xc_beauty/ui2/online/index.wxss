page {
    min-height: 100vh;
    font-size: 26rpx;
    background-color: #f9f9f9;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arialsans-serif;
}

image {
    width: 50rpx;
    height: 50rpx;
    display: block;
}

.line {
    height: 5rpx;
}

.search {
    background: #fff;
    padding: 20rpx 0;
}

.search view {
    width: 80%;
    margin: 0 auto;
    display: flex;
    background: #f6f6f6;
    border-radius: 30rpx;
    align-items: center;
    padding: 5rpx 0;
}

.search image {
    width: 35rpx;
    height: 35rpx;
    margin-left: 30rpx;
}

.search input {
    width: 85%;
    margin-left: 20rpx;
}

.dialogue {
    background: #fff;
}

.dialogue .dialogue-list:last-child {
    border: 0;
}

.dialogue-list {
    width: 90%;
    margin: 0 auto;
    display: flex;
    padding: 30rpx 0;
    border-bottom: 1rpx solid #f6f6f6;
    align-items: center;
}

.user-head {
    width: 80rpx;
    height: 80rpx;
    margin-right: 20rpx;
    position: relative;
}

.user-head image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
}

.news-num {
    position: absolute;
    width: 28rpx;
    height: 28rpx;
    border-radius: 28rpx;
    background: #ff897f;
    color: #fff;
    right: 0;
    top: 0;
    text-align: center;
    line-height: 28rpx;
    font-size: 2.8vw;
}

.content {
    width: 84%;
    line-height: 34rpx;
}

.userName {
    display: flex;
    justify-content: space-between;
}

.userName view:nth-child(2) {
    color: #999;
}

.text {
    color: #999;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.text .emoji {
    width: 40rpx;
    height: 40rpx;
    display: block;
    float: left;
}