page {
    min-height: 100vh;
    font-size: 26rpx;
    background-color: #f9f9f9;
    font-family: "Helvetica Neue","Hiragino Sans GB","Microsoft YaHei","\9ED1\4F53",Arialsans-serif;
}

image {
    width: 50rpx;
    height: 50rpx;
    display: block;
}

.allContentList {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
}

.dialogueList-box-title {
    background: #fff;
    width: 100rpx;
    height: 100vh;
}

.dialogueList-nav {
    width: 100rpx;
    height: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
}

.news-num {
    width: 25rpx;
    height: 25rpx;
    background: #ff897f;
    border-radius: 25rpx;
    color: #fff;
    position: absolute;
    right: 10rpx;
    top: 20rpx;
    text-align: center;
    line-height: 25rpx;
    font-size: 2.8vw;
}

.user_block {
    height: 55rpx;
}

.dialogueList-nav image {
    width: 80rpx;
    height: 80rpx;
    margin: 0 auto;
    border-radius: 80rpx;
}

.on {
    background: #e5e5e5;
}

.conversation {
    width: 735rpx;
    margin-left: 5rpx;
    position: relative;
    height: 100vh;
}

.else {
    display: flex;
    align-items: flex-start;
    width: 90%;
    margin: 0 auto;
}

.else image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    margin-right: 20rpx;
}

.else .talk {
    padding: 10rpx 20rpx;
    background: #fff;
    border-radius: 25rpx;
    color: #6b6b6b;
    max-width: 68%;
    word-break: break-all;
    overflow: hidden;
}

.else .talk.curr {
    width: 68%;
}

.else .talk view {
    line-height: 40rpx;
    float: left;
}

.else .talk>image {
    width: 100%;
    margin: 0;
    display: block;
    border-radius: 0;
}

.else .talk>image.emoji {
    width: 40rpx;
    height: 40rpx;
    float: left;
}

.user-talk {
    margin-top: 55rpx;
}

.my-talk {
    display: flex;
    width: 90%;
    margin: 0 auto;
    align-items: flex-start;
    justify-content: flex-end;
}

.user-talk image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 80rpx;
    margin-left: 20rpx;
}

.user-talk .talk {
    padding: 10rpx 20rpx;
    background: #ff897f;
    border-radius: 25rpx;
    color: #fff;
    max-width: 68%;
    word-break: break-all;
}

.user-talk .talk.curr {
    width: 68%;
}

.user-talk .talk>image {
    width: 100%;
    margin: 0;
    display: block;
    border-radius: 0;
}

.last-time {
    width: 88%;
    margin: 0 auto;
    text-align: right;
    color: #a5a4a4;
    margin-bottom: 10rpx;
}

.bottom_block {
    height: 155rpx;
}

.bottom {
    width: 735rpx;
    height: 100rpx;
    position: fixed;
    bottom: 0;
    left: 105rpx;
    background: #fff;
}

.bottom-list {
    display: flex;
    align-items: center;
    line-height: 100rpx;
    height: 100rpx;
    width: 85%;
}

.import {
    width: 430rpx;
    height: 60rpx;
    border-radius: 30rpx;
    background: #f6f6f6;
    margin-left: 40rpx;
}

.import input {
    min-height: 60rpx;
    max-height: 60rpx;
    border: 0;
    border-radius: 30rpx;
    width: 90%;
    margin: 0 auto;
}

.face image {
    width: 50rpx;
    height: 50rpx;
    border-radius: 50rpx;
    margin-left: 20rpx;
    margin-right: 20rpx;
}

.send {
    width: 50rpx;
    height: 100rpx;
    border-radius: 0;
    padding: 0;
    background: #fff;
    display: flex;
    align-items: center;
}

button::after {
    border: 0;
}

.emoji {
    width: 40rpx;
    height: 40rpx;
}