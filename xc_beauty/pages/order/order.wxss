.nav {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    background: #fff;
    display: flex;
    z-index: 100;
}

.nav>view {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 80rpx;
}

.nav_block {
    height: 80rpx;
}

.list {
    padding: 0 30rpx;
}

.list .item {
    border-radius: 20rpx;
    box-shadow: 0px 0px 10rpx 2rpx #fdeef3;
    margin-top: 20rpx;
    padding: 0 20rpx;
}

.list .item.theme3 {
    box-shadow: 0px 0px 10rpx 2rpx #ddd;
}

.list .item .item_t {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.list .item .item_t>view:nth-child(1) {
    flex: 1;
}

.list .item .item_t>image {
    width: 40rpx;
    height: 40rpx;
    margin-right: 10rpx;
}

.list .item .item_c {
    padding: 20rpx 0;
    border-top: #ddd 2rpx solid;
    border-bottom: #ddd 2rpx solid;
    display: flex;
}

.list .item .item_c>image {
    width: 100rpx;
    height: 100rpx;
}

.list .item .item_c .title {
    flex: 1;
    padding: 0 10rpx;
    box-sizing: border-box;
}

.list .item .item_c .info {
    text-align: right;
}

.list .item .item_c .info>view:nth-child(2) {
    color: #999999;
    font-size: 3vw;
    line-height: 3vw;
    text-decoration: line-through;
}

.list .item .item_c .info>view:nth-child(3) {
    color: #999999;
}

.list .item .item_b {
    padding: 20rpx 0;
}

.list .item .item_b .info {
    display: flex;
    color: #999999;
}

.list .item .item_b .price {
    color: #ff2a32;
}

.list .item .item_b .info>view:nth-child(1) {
    flex: 1;
}

.list .item .item_b .btn {
    display: flex;
    align-items: center;
    margin-top: 10rpx;
}

.list .item .item_b .btn .check {
    flex: 1;
}

.list .item .item_b .btn .check .item_check {
    display: flex;
    align-items: center;
    color: #D55179;
}

.list .item .item_b .btn .check .item_check image {
    width: 30rpx;
    margin-right: 10rpx;
}

.list .item .item_b .btn .btn1,.list .item .item_b .btn .btn2 {
    width: 150rpx;
    height: 50rpx;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.list .item .item_b .btn>view.btn1 {
    background: #fff;
    color: #999999;
    height: 46rpx;
    border: #999999 2rpx solid;
}

.list .item .item_b .btn>view.btn2 {
    color: #fff;
}

.list .item .item_b .btn view+view {
    margin-left: 20rpx;
}

.menu {
    position: fixed;
    top: 20vw;
    width: 90vw;
    left: 5vw;
    z-index: 9999;
    background: #fff;
    border-radius: 40rpx;
    box-sizing: border-box;
    padding: 40rpx;
}

.menu .menu_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.menu .menu_item {
    padding: 20rpx 0;
}

.menu .menu_item textarea {
    border: #ddd 2rpx solid;
    margin-top: 20rpx;
    height: 200rpx;
}

.menu .menu_btn {
    color: #fff;
    height: 80rpx;
    font-size: 4.5vw;
    display: flex;
    justify-content: center;
    align-items: center;
}