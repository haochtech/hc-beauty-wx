.list {
    padding: 30rpx;
}

.list>image {
    width: 100%;
    display: inline-block;
}

.bottom_block {
    height: 100rpx;
}

.bottom {
    display: flex;
    position: fixed;
    background: #fff;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    height: 100rpx;
}

.bottom .icon {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.bottom .icon>image {
    width: 60rpx;
    height: 60rpx;
}

.bottom .icon+.icon {
    border-left: #ddd 2rpx solid;
}

.bottom .icon .share {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}

.bottom .btn {
    line-height: 100rpx;
    text-align: center;
    color: #fff;
    font-size: 4.5vw;
    flex: 2;
}