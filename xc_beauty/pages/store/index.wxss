page {
    background: #f7f7f7;
}

.item {
    background: #fff;
}

.item+.item {
    margin-top: 10rpx;
}

.item .item_t {
    display: flex;
    padding: 20rpx;
}

.item .item_t>image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.item .item_t .item_l {
    flex: 1;
    width: 450rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.item .item_t .item_l>view {
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    line-height: 4vw;
}

.item .item_t .item_l>view:nth-child(1) {
    color: #333;
    font-size: 4vw;
    margin-bottom: 10rpx;
}

.item .item_t .item_r {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    line-height: 4vw;
    color: #999;
    border-left: #f3a7bf 2rpx dashed;
    padding-left: 20rpx;
    width: 100rpx;
    box-sizing: border-box;
}

.item .item_b {
    display: flex;
}

.item .item_b>view {
    flex: 1;
    height: 70rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
}

.item .item_b>view:nth-child(1) {
    background: #f3a7bf;
}

.item .item_b image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 14rpx;
}