.top {
    padding: 30rpx 0;
    position: relative;
}

.top .back {
    width: 550rpx;
    margin: 0 auto;
}

.top .userinfo {
    position: absolute;
    top: 60rpx;
    left: 130rpx;
    display: flex;
    align-items: center;
    color: #fff;
}

.top .userinfo>image {
    width: 50rpx;
    height: 50rpx;
    border: #fff 2rpx solid;
    border-radius: 100%;
    margin-right: 10rpx;
}

.btn {
    width: 160rpx;
    display: flex;
    height: 60rpx;
    align-items: center;
    justify-content: center;
    color: #fff;
    margin: 0 auto;
    border-radius: 60rpx;
}

.info {
    margin: 60rpx 30rpx 0;
    position: relative;
    border: #ddd 2rpx solid;
    padding: 0 30rpx;
}

.info .title {
    background: #fff;
    position: absolute;
    width: 420rpx;
    text-align: center;
    top: 0;
    left: 50%;
    transform: translate(-50%,-50%);
}

.info .content {
    margin-top: 20rpx;
    padding: 30rpx 0;
    display: flex;
}

.info .content .item {
    flex: 1;
    display: flex;
    align-items: center;
    flex-direction: column;
}

.info .content .item .img {
    width: 66rpx;
    height: 66rpx;
    box-sizing: border-box;
    padding: 10rpx;
    border-radius: 25rpx;
}

.info .content .item .img image {
    width: 100%;
    height: 100%;
}

.info .content .item>view:nth-child(2) {
    color: #999999;
    font-size: 3vw;
    line-height: 3.5vw;
    margin-top: 10rpx;
}

.list {
    margin-top: 60rpx;
    height: 125rpx;
    padding: 0 30rpx;
    width: 100%;
    box-sizing: border-box;
    white-space: nowrap;
}

.list .item {
    width: 250rpx;
    height: 125rpx;
    display: inline-block;
    color: #fff;
    overflow: hidden;
    position: relative;
}

.list .item .itemBack {
    width: 100%;
    height: 100%;
}

.list .item .itemBox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
}

.list .item+.item {
    margin-left: 30rpx;
}

.list .item.status2 {
    color: #d0d0d0;
}

.list .item .item_l {
    padding: 14rpx 20rpx;
    font-size: 2.5vw;
    width: 120rpx;
    line-height: 3.5vw;
    float: left;
}

.list .item .item_l .price {
    font-size: 5vw;
    line-height: 5.5vw;
}

.list .item .item_l .tip {
    width: 100rpx;
    height: 30rpx;
    border-radius: 30rpx;
    color: #fff;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 2.5vw;
}

.list .item .item_r {
    float: right;
    width: 60rpx;
    line-height: 3vw;
    box-sizing: border-box;
    padding: 0 20rpx;
    text-align: center;
    font-size: 2.5vw;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 125rpx;
    white-space: normal;
}

.detail {
    padding: 0 30rpx;
    margin-top: 60rpx;
}

.detail .title {
    display: flex;
    align-items: center;
}

.detail .title>view:nth-child(1) {
    width: 10rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.detail .title .tip {
    color: #fab1c8;
    font-size: 3vw;
}

.detail .content {
    padding: 20rpx;
    color: #999999;
    width: 100%;
    box-sizing: border-box;
    display: block;
}