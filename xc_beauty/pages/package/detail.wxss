page {
    background: #f7f7f7;
}

.page .banner {
    width: 100%;
    height: 70vw;
    position: relative;
}

.page .banner image {
    width: 100%;
    height: 100%;
    display: block;
}

.list .list_t {
    background: #fff;
}

.list .top {
    padding: 20rpx 30rpx;
    position: relative;
    background: #fff;
}

.list .top .title {
    padding-right: 50rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.list .top .price {
    color: #999999;
}

.list .top .o_price {
    text-decoration: line-through;
    margin-left: 10rpx;
}

.list .top .share {
    position: absolute;
    top: 20rpx;
    right: 30rpx;
    width: 50rpx;
    font-size: 3vw;
    text-align: center;
    color: #999999;
    margin: 0;
    padding: 0;
    border: none;
    border-radius: 0;
    background: transparent;
}

.list .top .share::after {
    content: '';
    display: none;
    outline: none;
    border: none;
}

.list .you {
    padding: 20rpx 30rpx;
    margin-top: 10rpx;
    background: #fff;
}

.list .service {
    padding: 20rpx 30rpx;
    margin-top: 10rpx;
    background: #fff;
}

.list .service .serviceV {
    padding: 10rpx 0;
}

.list .detail {
    background: #fff;
    margin-top: 10rpx;
    padding: 20rpx 30rpx;
}

.list .detail .title {
    text-align: center;
}

.list .detail .title>view:nth-child(2) {
    width: 50rpx;
    height: 4rpx;
    margin: 0 auto;
    background: #000;
    margin-top: 10rpx;
}

.list .detail .title2 {
    position: relative;
    height: 40rpx;
    margin-top: 10rpx;
    color: #777777;
}

.list .detail .title2>view:nth-child(1) {
    background: #fff;
    position: absolute;
    left: 50%;
    transform: translate(-50%);
    z-index: 2;
    padding: 0 10rpx;
}

.list .detail .title2>view:nth-child(2) {
    width: 100%;
    height: 2rpx;
    background: #777;
    top: 50%;
    transform: translate(0,-50%);
    z-index: 1;
    position: absolute;
}

.list .detail .content {
    padding: 20rpx 0;
}

.list .detail .content .wxParse-img {
    width: 100%;
}

.list .detail .content>image {
    width: 100%;
}

.list .detail .content .text {
    text-indent: 2em;
}

.list .store {
    margin-top: 10rpx;
    padding: 0 30rpx;
    background: #fff;
}

.list .store>view {
    padding: 20rpx 0;
}

.list .store .content {
    padding: 20rpx;
    border-top: #ddd 2rpx dashed;
}

.list .store .item {
    padding: 20rpx 0;
    display: flex;
    color: #999;
    border-top: #ddd 2rpx dashed;
    margin: 0;
}

.list .store .item>view:nth-child(1) {
    flex: 1;
    color: #333;
}

.btn2 {
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    height: 100rpx;
    color: #fff;
    display: flex;
    align-items: center;
    font-size: 3.5vw;
    z-index: 22;
    background: #fff;
}

.btn2.curr {
    padding-bottom: 60rpx;
}

.btn2 image {
    width: 40rpx;
    height: 40rpx;
}

.btn2 .btn_item {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100rpx;
}

.btn2 .btn_item.curr {
    color: #333;
}

.btn2 .btn_item.sp1 {
    flex: 2;
}

.bottom_block {
    height: 100rpx;
}

.bottom_block.curr {
    height: 160rpx;
}

.menu {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: #fff;
}

.menu.curr {
    padding-bottom: 60rpx;
}

.menu .menu_top {
    padding: 20rpx 30rpx;
    text-align: center;
    position: relative;
}

.menu .menu_top .menu_close {
    position: absolute;
    left: 30rpx;
    font-size: 4.5vw;
    top: 50%;
    transform: translate(0,-50%);
}

.menu .menu_list {
    height: 40vh;
    margin-top: 30rpx;
    padding: 0 30rpx;
}

.menu .menu_list .item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_list .item>icon {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.menu .menu_btn {
    height: 100rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4.5vw;
    border-radius: 0;
    border: none;
}

.menu .menu_btn::after {
    content: '';
    border-radius: 0;
    border: none;
}

.menu .item_c {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: #ddd 2rpx solid;
    position: relative;
}

.menu .item_c .tip {
    position: absolute;
    bottom: 0;
    font-size: 2.5vw;
    left: 70rpx;
}

.menu .item_c>view:nth-child(2) {
    flex: 1;
    margin-left: 20rpx;
}

.menu .item_c>icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.sign {
    position: fixed;
    width: 80%;
    background: #fff;
    top: 20vw;
    left: 10%;
    z-index: 1000;
    border-radius: 40rpx;
    padding: 40rpx 20rpx 40rpx;
    box-sizing: border-box;
}

.sign>view:nth-child(1) {
    text-align: center;
    font-size: 5vw;
    color: #12b8f6;
}

.sign input {
    flex: 1;
    padding: 0 20rpx;
    text-align: center;
    border: #ddd 2rpx solid;
    border-radius: 40rpx;
    margin-top: 20rpx;
}

.sign .sign_btn {
    background: #12b8f6;
    color: #fff;
    font-size: 5vw;
    text-align: center;
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    margin-top: 40rpx;
    line-height: inherit;
}

.sign .sign_tip {
    font-size: 3vw;
    text-align: center;
    color: red;
}

.sign .sign_close {
    position: absolute;
    top: 10rpx;
    right: 20rpx;
}

.share {
    position: fixed;
    z-index: 10;
    bottom: 20vh;
    right: 20rpx;
    width: 80rpx;
    height: 80rpx;
}