.buyBlock {
    height: 100rpx;
    box-shadow: 0 -1px 3px #999;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 0;
    z-index: 50;
    background: #fff;
}

.buyBlock.curr {
    padding-bottom: 60rpx;
}

.buyBlock .navBox {
    width: 120rpx;
    text-align: center;
    position: relative;
    padding: 25rpx 0;
}

.buyBlock .navBox image {
    width: 50rpx;
    height: 50rpx;
    display: inline-block;
}

.buyBlock .navBox .num {
    font-size: 18rpx;
    height: 24rpx;
    min-width: 24rpx;
    box-sizing: border-box;
    line-height: 24rpx;
    padding: 0 5rpx;
    background-color: #8CDBC9;
    color: #fff;
    border-radius: 12rpx;
    position: absolute;
    top: 20rpx;
    left: 50%;
    margin-left: 13rpx;
}

.buyBlock .border {
    width: 1px;
    height: 100%;
    background-color: #ddd;
}

.buyBlock.type1 .btn {
    color: #fff;
    font-size: 22rpx;
    text-align: center;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
}

.buyBlock.type2 .btn {
    color: #fff;
    font-size: 28rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.buyBlock .btn>text {
    display: block;
}

.buyBlock .btn .sp1 {
    font-size: 26rpx;
}

.buyBlock .btn.bg1 {
    background-color: #29aae1;
}

.buyBlock .btn.bg2 {
    background-color: #77D4C0;
}

.buyBlock .btn.btn2 {
    color: #fff;
    font-size: 30rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    padding-top: 0;
}

.body image {
    width: 100%;
    height: 100%;
}

.bottomBlank2 {
    height: 101rpx;
}

.bottomBlank2.curr {
    height: 161rpx;
}

.footer,.footer_block,.customer_service {
    display: none;
}