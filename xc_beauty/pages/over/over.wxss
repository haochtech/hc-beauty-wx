.page {
    padding-top: 20vw;
}

.page>image {
    width: 200rpx;
    height: 200rpx;
    margin: 0 auto;
}

.text {
    text-align: center;
    margin-top: 20rpx;
    font-size: 4.5vw;
}

.money {
    text-align: center;
    color: #000;
    font-size: 8vw;
    margin-top: 10rpx;
}

.btn {
    margin: 20rpx 50rpx;
    border-radius: 10rpx;
    height: 80rpx;
    font-size: 4vw;
    display: flex;
    justify-content: center;
    align-items: center;
}

.btn1 {
    margin-top: 100rpx;
    color: #fff;
}

.btn2 {
    border: #ddd 2rpx solid;
    height: 76rpx;
    box-shadow: 0px 0px 10rpx 2rpx #fdeef3;
}

.btn2.theme3 {
    box-shadow: 0px 0px 10rpx 2rpx #ddd;
}

.tip {
    text-align: center;
    color: #999999;
}