.top {
    height: 300rpx;
    text-align: center;
    padding-top: 30rpx;
    box-sizing: border-box;
    color: #fff;
}

.top>image {
    margin: 0 auto;
    width: 100rpx;
    height: 100rpx;
}

.top>view:nth-child(2) {
    font-size: 6vw;
    line-height: 6vw;
    margin-top: 20rpx;
}

.tip {
    margin: 50rpx 30rpx 0;
    padding: 20rpx;
    background: #fdecf1;
    display: flex;
}

.tip.theme3 {
    background: #444;
    color: #fff;
}

.tip>view:nth-child(1) {
    flex: 1;
}

.tip>view:nth-child(2) {
    color: #f5a417;
}

.list {
    margin: 30rpx;
    padding: 0 20rpx;
    border-radius: 20rpx;
    box-shadow: 0px 0px 10rpx 2rpx #fdeef3;
}

.list.theme3 {
    box-shadow: 0px 0px 10rpx 2rpx #ddd;
}

.list .item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>view:nth-child(1) {
    flex: 1;
    color: #999999;
}

.rules {
    margin: 0 30rpx 30rpx;
}

.rules .title {
    font-size: 4.5vw;
}

.rules .content {
    color: #999999;
}