.page {
    padding: 30rpx 0;
}

.back {
    padding: 0 60rpx;
    position: relative;
}

.back .back_img {
    width: 100%;
}

.back .avatar {
    position: absolute;
    top: 70rpx;
    left: 100rpx;
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.back .nick {
    position: absolute;
    top: 80rpx;
    left: 220rpx;
}

.back .back_tip {
    position: absolute;
    color: #999;
    top: 120rpx;
    left: 220rpx;
}

.back .code {
    width: 315rpx;
    height: 315rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.btn {
    width: 240rpx;
    height: 60rpx;
    color: #fff;
    border-radius: 60rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 30rpx auto 0;
}

.tip {
    text-align: center;
    color: #999999;
    margin-top: 20rpx;
}