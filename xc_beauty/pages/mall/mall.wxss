page {
    background: #f7f7f7;
}

.list {
    margin-bottom: 8rpx;
    overflow: hidden;
}

.list .listBox {
    margin-bottom: 10rpx;
    width: 340rpx;
    padding: 25rpx 10rpx 15rpx 25rpx;
}

.list .listBox:nth-of-type(2n) {
    padding: 25rpx 25rpx 15rpx 10rpx;
}

.list .listBox .imgBlock {
    position: relative;
    width: 340rpx;
    height: 288rpx;
    margin-bottom: 10rpx;
}

.list .listBox .imgBlock .tags {
    position: absolute;
    left: 5rpx;
    top: 0;
}

.list .listBox .imgBlock .tag {
    display: inline-block;
    width: 54rpx;
    height: 54rpx;
    text-align: center;
    line-height: 46rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0 0 27rpx 27rpx;
    margin-right: 5rpx;
}

.list .listBox .imgBlock .tag.bg1 {
    background-color: #FF8000;
}

.list .listBox .imgBlock .tag.bg2 {
    background-color: #FCC601;
}

.list .listBox .imgBlock .tag.bg3 {
    background-color: #77D4C0;
}

.list .listBox image {
    vertical-align: bottom;
    width: 100%;
    height: 100%;
}

.list .listBox .h1 {
    font-size: 28rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 15rpx;
}

.list .listBox .p {
    font-size: 20rpx;
    color: #999;
    padding-bottom: 10rpx;
    border-bottom: 1px dotted #dcdcdc;
    margin-bottom: 15rpx;
}

.list .listBox .p .sp1 {
    color: #77D2BF;
}

.list .listBox .info {
    font-size: 30rpx;
    color: #77D3BF;
}

.list .listBox .info .btn {
    width: 134rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    background-color: #77D4C0;
    font-size: 26rpx;
    color: #fff;
}