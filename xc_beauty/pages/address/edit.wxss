page {
    background: #fbfaf8;
}

.list {
    background: #fff;
    padding: 0 30rpx;
}

.list .item {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>view:nth-child(1) {
    width: 130rpx;
}

.list .item>input {
    flex: 1;
}

.list .item>image {
    width: 40rpx;
}

.btn {
    margin: 30rpx 50rpx;
    height: 80rpx;
    color: #fff;
    border-radius: 10rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.btn1 {
    background: #aaa;
}

.btn2 {
    border: #ddd 2rpx solid;
    color: #604a30;
    height: 76rpx;
}