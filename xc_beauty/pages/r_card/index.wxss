page {
    background: #f7f7f7;
}

.page {
    box-sizing: border-box;
    padding: 6rpx 0;
}

.list {
    padding: 20rpx 38rpx;
    background: #fff;
    overflow: hidden;
}

.list .item {
    float: left;
}

.list .item:nth-child(2n) {
    margin-left: 32rpx;
}

.list .item .itemT {
    width: 320rpx;
    height: 200rpx;
    position: relative;
}

.list .item .itemT .simg {
    width: 100%;
    height: 100%;
    display: block;
}

.list .item .itemT .itemBox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 20rpx;
}

.list .item .itemT .itemBox .sp1 {
    text-align: center;
    padding: 20rpx 0;
}

.list .item .itemT .itemBox .sp2 {
    color: #fff;
}

.list .item .itemT .itemBox .sp3 {
    font-size: 8vw;
    line-height: 10vw;
}

.list .item .itemB {
    padding: 20rpx 0;
}

.list .item .itemB>icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.rule {
    padding: 0 38rpx;
    background: #fff;
    margin-top: 10rpx;
}

.rule .sp1 {
    padding: 30rpx 0;
    color: #989898;
}

.block {
    height: 100rpx;
}

.block.curr {
    height: 160rpx;
}

.pay {
    color: #fff;
    line-height: 100rpx;
    display: flex;
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 100;
    font-size: 4.5vw;
    box-sizing: border-box;
    padding: 0 30rpx;
    background: #fff;
}

.pay.curr {
    padding-bottom: 60rpx;
}

.pay .sp1 {
    flex: 1;
}