page {
    background: #f7f7f7;
}

.page {
    box-sizing: border-box;
    padding: 6rpx 0;
}

.list {
    background: #fff;
    padding: 20rpx 30rpx;
}

.list .item {
    width: 100%;
    height: 250rpx;
    position: relative;
}

.list .item+.item {
    margin-top: 20rpx;
}

.list .item .back {
    width: 100%;
    height: 100%;
    display: block;
}

.list .item .itemBox {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
}

.list .item .itemBox .itemT {
    height: 190rpx;
    padding: 0 30rpx;
    display: flex;
    align-items: center;
}

.list .item .itemBox .itemT.curr {
    color: #bbb;
}

.list .item .itemBox .itemT .t1 {
    flex: 1;
}

.list .item .itemBox .itemT .t2 {
    font-size: 8vw;
    line-height: 10vw;
}

.list .item .itemBox .itemT .btn {
    width: 150rpx;
    line-height: 60rpx;
    border-radius: 60rpx;
    text-align: center;
    background: #fff;
}

.list .item .itemBox .itemB {
    line-height: 60rpx;
    display: flex;
    color: #fff;
    padding: 0 30rpx;
}

.list .item .itemBox .itemB .b1 {
    flex: 1;
}

.list .item .itemBox .itemB .b2 {
    margin: 0;
    padding: 0;
    background: transparent;
    color: #fff;
    line-height: 60rpx;
    font-size: 3.5vw;
}

.list .item .itemBox .itemB .b3 {
    color: #999999;
}