page {
    background: #f5f5f5;
}

.nav {
    display: flex;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 100;
    background: #fff;
    width: 100%;
}

.nav>view {
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    flex: 1;
}

.nav_block {
    height: 84rpx;
}

.list {
    background: #fff;
    margin-top: 20rpx;
    padding: 0 30rpx;
}

.list .item {
    padding: 30rpx 0;
    display: flex;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item .item_l {
    display: flex;
    align-items: center;
}

.list .item .item_l>image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 100%;
    margin-right: 20rpx;
}

.list .item .item_l>view:nth-child(2) {
    width: 120rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_c {
    flex: 1;
    width: 300rpx;
    box-sizing: border-box;
    margin: 0 20rpx;
    display: flex;
    align-items: center;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.list .item .item_r {
    width: 100rpx;
    display: flex;
    align-items: center;
}

.list .item .item_r>view {
    height: 60rpx;
    width: 100%;
    box-sizing: border-box;
    line-height: 60rpx;
    border-radius: 10rpx;
    border: #999999 2rpx solid;
    text-align: center;
    color: #999999;
}

.menu {
    position: fixed;
    top: 20vh;
    width: 80%;
    left: 10%;
    background: #fff;
    z-index: 1000;
    box-sizing: border-box;
    border-radius: 20rpx;
    padding: 20rpx 100rpx;
}

.menu .title {
    text-align: center;
    font-size: 4.5vw;
    padding: 20rpx 0;
}

.menu .name {
    text-align: center;
}

.menu image {
    width: 140rpx;
    height: 140rpx;
    margin: 20rpx auto;
}

.menu .menu_list {
    color: #999999;
}

.menu .btn {
    width: 100%;
    height: 70rpx;
    color: #fff;
    line-height: 70rpx;
    border-radius: 10rpx;
    text-align: center;
    margin: 50rpx 0 20rpx;
}

.menu .menu_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
    font-size: 5vw;
}

.code {
    position: fixed;
    bottom: 200rpx;
    right: 20rpx;
    color: #fff;
    padding: 10rpx 40rpx;
    border-radius: 10rpx;
    z-index: 100;
}